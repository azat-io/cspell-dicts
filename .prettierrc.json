{
    "printWidth": 120,
    "singleQuote": true,
    "overrides": [
        {
            "files": "**/*.{yaml,yml}",
            "options": {
                "singleQuote": true
            }
        },
        {
            "files": "**/*.{json,jsonc,md}",
            "options": {
                "trailingComma": "none"
            }
        }
    ]
}
